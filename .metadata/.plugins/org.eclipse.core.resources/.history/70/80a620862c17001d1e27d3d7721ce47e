package ui;

import controllers.FilmeController;
import utils.Leitura;

public class UI {
	
	private enum MENU {
		CADASTRAR_FILME(1),
		LISTAR_FILMES(2),
		PROCURAR_POR_NOME(3),
		PROCURAR_POR_DIRETOR(4),
		PROCURAR_POR_ATOR(5),
		LISTAR_POR_NOTA(6),
		SAIR(7);

		private int valor;
		
		MENU(int valor) {
			this.valor = valor; 
		}		
	};
	
	private FilmeController fc;
	
	public UI() {
		this.fc = new FilmeController();
	}
	
	public void start() {
		divisoria();
		bemVindo();
		
		MENU escolhaMenu;
		
		do{
			escolhaMenu = menu();
		} while(escolhaMenu != 7);
		
	}
	
	public void divisoria() {
		System.out.println("=========================");
	}
	
	public void bemVindo() {
		System.out.println("Bem vindo ao aplicativo de cadastro de filmes.");
	}
	
	public int menu() {
		divisoria();
		System.out.println("Escolha uma opção do menu para continuar: ");
		divisoria();
		System.out.println("1 - Cadastrar um filme.");
		System.out.println("2 - Listar filmes cadastrados.");
		System.out.println("3 - Procurar um filme por nome.");
		System.out.println("4 - Listar filmes de um diretor.");
		System.out.println("5 - Listar filmes de um ator.");
		System.out.println("6 - Listar filmes por nota.");
		System.out.println("7 - Encerrar.");
		
		System.out.println();
		
		return Leitura.LeInt("Qual a opção desejada? ");
	}
	
	
	
}
